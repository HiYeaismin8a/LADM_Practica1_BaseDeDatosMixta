<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA07A"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageITTEPIC"
            app:srcCompat="@drawable/ittepic"
            android:layout_alignParentRight="true"

            />

        <TextView
            android:id="@+id/tituloMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:text="Laboratorio de App. MÃ³viles" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tituloMateria"
            android:id="@+id/tituloUno"
            android:text="Alumnos: Juan Mata S."
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:id="@+id/tituloTres"
            android:layout_below="@+id/tituloUno"
            android:text="Jazmin Ochoa"
            />

        <Button
            android:id="@+id/btnSincronizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloTres"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Sincronizar Datos"
            />

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/btnSincronizar"
            android:layout_marginTop="50dp"
            />

    </RelativeLayout>
    </LinearLayout>


